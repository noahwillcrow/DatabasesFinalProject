@model Website.Models.Response.KidUpdateResponseViewModel
@{
    ViewBag.Title = (string.IsNullOrEmpty(Model.Name) ? "Create" : "Update") + " a kid";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <label for="HouseID">House</label>
    <select name="HouseID" value="@(Model.HouseID > 0 ? Model.HouseID.ToString() : string.Empty)">
        @foreach (var house in DatabaseBridge.Managers.HousesManager.GetAll())
        {
            <option value="@house.ID">@house.FamilyName</option>
        }
    </select>
    <br />
    <br />
    <label for="Name">Name</label>
    <input type="text" name="Name" placeholder="Name" value="@Model.Name" />
    <br />
    <br />
    <label for="Gender">Gender</label>
    <input type="text" name="Gender" placeholder="Gender" value="@Model.Gender" />
    <br />
    <br />
    <label for="Age">Age</label>
    <input type="text" name="Age" placeholder="Age" value="@Model.Age" />
    <br />
    <br />
    <input type="submit" value="@(string.IsNullOrEmpty(Model.Name) ? "Create" : "Update")" />
</form>