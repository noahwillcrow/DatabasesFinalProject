@model Website.Models.Response.ElfUpdateResponseViewModel
@{
    ViewBag.Title = (string.IsNullOrEmpty(Model.Name) ? "Create" : "Update") + " an elf";
}

<h2>@ViewBag.Title</h2>
@if (Model.UpdateSuccess)
{
    <h4 style="color: green;">Update successful.</h4>
}

<form method="post">
    <label for="Name">Name</label>
    <input type="text" name="Name" placeholder="Name" value="@Model.Name" />
    <br />
    <br />
    <label for="YearsOnJob">Years on job</label>
    <input type="text" name="YearsOnJob" placeholder="YearsOnJob" value="@Model.YearsOnJob" />
    <br />
    <br />
    <label for="Salary">Salary</label>
    <input type="text" name="Salary" placeholder="Salary" value="@Model.Salary" />
    <br />
    <br />
    <label for="Rank">Rank</label>
    <input type="text" name="Rank" placeholder="Rank" value="@Model.Rank" />
    <br />
    <br />
    <input type="submit" value="@(string.IsNullOrEmpty(Model.Name) ? "Create" : "Update")" />
</form>