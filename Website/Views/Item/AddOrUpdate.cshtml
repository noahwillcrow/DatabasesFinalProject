@model Website.Models.Response.ItemUpdateResponseViewModel
@{
    ViewBag.Title = (string.IsNullOrEmpty(Model.Name) ? "Create" : "Update") + " an item";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <label for="Name">Name</label>
    <input type="text" name="Name" placeholder="Name" value="@Model.Name" />
    <br />
    <br />
    <input type="submit" value="@(string.IsNullOrEmpty(Model.Name) ? "Create" : "Update")" />
</form>